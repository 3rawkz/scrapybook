<?py # -*- coding: utf-8 -*- ?>
<?py #@ARGS page, nextp, links ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
<title>Scrapy Book Tutorial Example</title>
</head>
<body>
  <h1>Page ${page}</h1>
  <ul>
    <?py for item in items: ?>
    <li class="hlisting style1">
      <a class="description" href="${item['link']}" rel="nofollow"><p class="ad-title-text">${item['title']}</p></a>
      <p class="price">${item['price']}</p><p class="location">${item['address']}</p>
    </li>
    <?py #endfor ?>
  </ul>
  <?py if nextp: ?>
  <div id="pagination"><ul><li><a href="${nextp}" rel="nofollow">next</a></li></ul></div>
  <?py #endif ?>
  <p>Example index page. For more information: <a href="http://scrapybook.com">scrapybook.com</a></p>
</body>
</html>
